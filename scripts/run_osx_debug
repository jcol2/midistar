#!/bin/bash

# Change to script dir
cd "$(dirname "$0")"

# Check directory
dir=${PWD##*/}
if [ $dir == 'scripts' ]; then
    cd ..
fi

# Find binary
./scripts/find_binary "debug"

# If we found the binary...
if [ $? -eq 0 ]; then
    # Set environment variables
    . ./scripts/set_env_osx "debug"

    # Run executable
    exec ./build/bin/debug/midistar "$@"
fi

